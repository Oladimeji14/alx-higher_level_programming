#!/bin/bash

# Ensure $PYFILE is set
if [ -z "$PYFILE" ]; then
    echo "Error: \$PYFILE environment variable not set."
    exit 1
fi

# Check if the provided Python file already exists
if [ ! -f "$PYFILE" ]; then
echo "Error: Python file '$PYFILE' not found."
    exit 1
fi

# Run the Python script
python3 "$PYFILE"
